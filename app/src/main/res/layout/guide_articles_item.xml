<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_300sdp"
    android:layout_height="@dimen/_300sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    app:cardCornerRadius="8dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    android:elevation="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/guide_item_imageview_article"
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_200sdp"
        android:background="@color/white"
        android:scaleType="centerCrop"
        android:src="@drawable/guide_item_image_article">
    </ImageView>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/guide_item_textview_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0048F0"
        android:text="EXPERIENCE"
        android:fontFamily="@font/source_sans_pro"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/_210sdp"
        android:layout_marginStart="@dimen/_10sdp">
    </TextView>

    <TextView
        android:id="@+id/guide_item_textview_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Beautiful Alley Scene in Old Town in Europe at Sunset"
        android:fontFamily="@font/source_sans_pro"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_230sdp"
        android:layout_marginStart="@dimen/_10sdp">
    </TextView>



</androidx.cardview.widget.CardView>